@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Product>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "_ChildPage.cshtml";
}

<link rel="stylesheet" href="@Url.Content("~/css/blockGridLayout.css")" />

<section class="bg-white">
    <div class="container">
        <div class="section-content">
            
            @await Html.GetBlockGridHtmlAsync(Model, "bodyText")
            <br/>
            
            <h3>Customer Review</h3>
            @await Html.GetBlockListHtmlAsync(Model, "Review")
            
        </div>
    </div>
</section>
